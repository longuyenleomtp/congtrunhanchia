<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btncong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="91dp"
        android:gravity="center"
        android:text="+"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btntru"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="-"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@+id/btncong"
        app:layout_constraintTop_toBottomOf="@+id/btncong" />

    <Button
        android:id="@+id/btnnhan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="*"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@+id/btntru"
        app:layout_constraintTop_toBottomOf="@+id/btntru" />

    <Button
        android:id="@+id/btnchia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:gravity="center"
        android:text="/"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@+id/btnnhan"
        app:layout_constraintTop_toBottomOf="@+id/btnnhan" />

    <Button
        android:id="@+id/btnlog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="log"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/btnsosanh" />

    <Button
        android:id="@+id/btnchialaydu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="1dp"
        android:gravity="center"
        android:text="/"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/btnchia"
        app:layout_constraintTop_toBottomOf="@+id/btnchia" />

    <TextView
        android:id="@+id/txtchialaydu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="20dp"
        android:text="Chia lấy dư"
        app:layout_constraintBottom_toBottomOf="@+id/btnchialaydu"
        app:layout_constraintEnd_toStartOf="@+id/btnchialaydu" />

    <Button
        android:id="@+id/btnsosanh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="SS"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/btnchialaydu"
        app:layout_constraintTop_toTopOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="23dp"
        android:text="So sánh"
        app:layout_constraintEnd_toStartOf="@+id/btnsosanh"
        app:layout_constraintTop_toBottomOf="@+id/btnchialaydu" />


</androidx.constraintlayout.widget.ConstraintLayout>